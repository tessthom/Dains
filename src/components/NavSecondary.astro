---
const { variant = 'primary', isHome } = Astro.props;
---
<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 0.25em;
  }

  a:link, a:visited {
    display: inline-block;
    color: inherit;
  }

  a:hover {
    font-weight: var(--font-weight-6)
  }

  a {
    /* font-size: 1.15rem; */
    font-weight: var(--font-weight-7);
    font-size: clamp(1.15rem, 0.942rem + 1.165vw, 1.35rem);
  }

  @media (min-width: 654px) {
    /* lighten footer nav links weight for larger screens */
    a {
      font-weight: var(--font-weight-6);
    }
  }

  /* @media (min-width: 767px) {
    ul {
      display: grid;
      grid-template-columns: repeat(2, max-content);
      grid-template-rows: repeat(4, 1fr);
      grid-auto-flow: column;
      column-gap: var(--size-fluid-6);
    }
  } */

  @media (min-width: 1400px) {
    .nav {
      width: 1400px;
      max-width: 1400px;
      padding-inline: var(--space-sm);
    }
  }
</style>

<!-- conditionally set nav--primary for Header or nav--secondary for Footer -->
<nav class={`nav nav--${variant}`} aria-label={variant === 'primary' ? 'Primary' : 'Secondary'}>
  <ul>
    {variant === 'secondary' && !isHome && <li><a href="/">Home</a></li>}
    <li><a href="/about/">About Us</a></li>
    <li><a href="/location/">Hours & Location</a></li>
    <li><a href="/contact/">Contact</a></li>
    <li><a href="/menu/">Menu</a></li>
    <!-- include FAQs link for secondary nav only -->
    {variant === 'secondary' && <li><a href="/faqs/">FAQs</a></li>}
  </ul>
</nav>