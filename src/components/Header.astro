---
import Hamburger from './Hamburger.astro';
import Navigation from './NavPrimary.astro';
import { Image } from 'astro:assets';
import logo from '../assets/logo.png';
---
<style is:global>
  header {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
  }

  .container__logo {
    min-width: 50px;
  }

  .logo {
    width: 10vw;
    max-width: 50px;
    height: auto;
    border: 3px solid var(--white);
    outline: 3px solid var(--red);
  }

  /* Layout change at tablet and larger screen sizes */
  @media (min-width: 654px) {
    .wrapper-container {
      min-width: 100%;
      display: flex;
      justify-content: space-between;
      border-bottom: 3px solid var(--red);
    }
    header.bottom-border {
      border: none;
    }
  }
</style>

<div class="wrapper-container">
  <header class="padded-all bottom-border">
    <div class="container__logo">
      <a href="/">
        <Image src={logo} alt="Dain's Place logo" class="logo" width="160" />
      </a>
    </div>
    <Hamburger />
  </header>
  <Navigation class="item" />
</div>
