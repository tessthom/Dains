---
import Hamburger from './Hamburger.astro';
import Navigation from './NavPrimary.astro';
import { Image } from 'astro:assets';
import logo from '../assets/logo-blue-border.png';
---
<style is:global>
  header {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
  }

  .container__logo {
    min-width: 50px;
  }

  .logo {
    width: 10vw;
    height: auto;
    border: 3px solid var(--white);
    outline: 3px solid var(--red);
  }

</style>

<header class="padded-all bottom-border">
  <div class="container__logo">
    <a href="/">
      <Image src={logo} alt="Dain's Place logo" class="logo" width="160" />
    </a>
  </div>
  <Hamburger />
</header>
<Navigation />
