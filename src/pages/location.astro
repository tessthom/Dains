---
import BaseLayout from '../layouts/BaseLayout.astro';

import { Image } from 'astro:assets';
import dainsFromStreet from '../assets/barfront.webp';
import photoWithSticker from '../assets/building-with-sticker.jpg';

const pageTitle = 'Location';
---
<style>
	.container {
		padding: var(--space-md) var(--space-sm);
		display: flex;
		flex-direction: column;
		gap: var(--space-sm);
	}

	h2, section, aside {
		text-align: center;
	}

	h2 {
		width: 100%;
		font-size: clamp(4rem, 2.965rem + 4.419vw, 6.5rem);
	}

	.location, .hours {
		padding: var(--space-sm) var(--space-md);
		display: flex;
		flex-direction: column;
		gap: .25em;
		align-items: center;
		justify-content: center;
		text-align: center;
	}

	p {
		margin-inline: auto;
		max-width: 20ch;
		font-size: 1.25rem;
		line-height: 1.5rem;
	}

	address {
		font-weight: var(--font-weight-7);
		font-size: 1.5rem;
		font-style: normal;
		line-height: 2.125rem;
	}

	iframe {
		width: 100%;
		height: auto;
	}
	
	img {
		object-fit: cover;
	}

	iframe, img {
		aspect-ratio: 1 / 1;
	}

	.map-wrapper {
		border: 3px solid var(--red);
		border-bottom: 10px solid var(--red);
	}

	aside {
		padding: var(--space-sm) var(--space-md);
		outline: var(--border) solid var(--red);
		background-color: var(--red);
		color: var(--white);
		font-family: 'Roboto Condensed Variable', sans-serif;
	}

	.photo-desktop {
		display: none;
	}
 
	.days, .time, address {
		font-size: 1.5rem;
		font-size: clamp(1.5rem, 1.086rem + 1.25vw, 2.5rem);
		font-weight: var(--font-weight-7);
		line-height: 2.125rem;
	}

	.kitchen {
		font-size: 1rem;
		font-style: italic;
		font-weight: var(--font-weight-3);
	}

	@media (min-width: 654px) {
		.container {
			display: grid;
			grid-template-columns: 1fr 1fr;
			grid-template-rows: auto repeat(2, 1fr);
		}
		.location, .photo, .hours-wrapper {
			height: 100%;
		}
		.heading {
			grid-column: 1 / 3;
		}
		.photo-wrapper {
			grid-column: 1 / 2;
			grid-row: 3 / 4;
			border: 3px solid var(--red);
			border-bottom: 10px solid var(--red);

			position: relative;
		}
		.hours-wrapper {
			grid-column: 2 / 3;
			grid-row: 3 / 4;
		}
		.location, .hours {
			gap: .75rem;
		}
		.accent-wrapper {
			display: none;
		}
		.photo {
			display: none;
		}
		.photo-desktop {
			display: block;
		}
		/* .sticker {
			position: absolute;
			right: 10%;
			bottom: 10%;
			width: 36%;
			aspect-ratio: initial;
			transform: rotate(-15deg);
		} */
	}
</style>

<BaseLayout pageTitle={pageTitle}>
	<div class="container">
		<h2 class="uppercase heading">Come Get the Munchies!</h2>

		<section class="location-wrapper">
			<div class="location box-white drop-border">
				<p>Dain's Place is located in the heart of town, at:</p>
				<address>
					754 Ninth Street<br>
					Durham, NC 27705
				</address>
			</div>
		</section>

		<div class="map-wrapper">
			<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3227.43892593686!2d-78.92450288875555!3d36.00957361175304!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89ace3f8a2c30097%3A0xdcd53772bff6ccfa!2sDain&#39;s%20Place!5e0!3m2!1sen!2sus!4v1736456926115!5m2!1sen!2sus" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
		</div>

		<aside class="accent-wrapper">
			<p class="cursive uppercase">Look for the big D!</p>
		</aside>

		<div class="photo-wrapper">
			<Image class="photo" src={dainsFromStreet} alt="Front view of Dain's Place, a black brick building with a red awning and sunny patio." />
			<Image class="photo-desktop" src={photoWithSticker} alt="Look for the big D!" />
		</div>

		<section class="hours hours-wrapper box-white drop-border">
			<p>We're open:</p>
			<div class="spacer-wrapper">
				<p class="days">Monday - Sunday</p>
				<p class="time">11AM - 12AM</p>
			</div>
			<p class="kitchen">*Kitchen 'til 10pm</p>
		</section>
	</div>

</BaseLayout>