---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = 'Home';
---
<style>
	.hero {
		background-image: linear-gradient(hsl(16, 76%, 66%, .12), hsl(16, 76%, 66%, .12)), url('../assets/burger-with-loaded-fries.jpg');
		background-color: var(--background);
		color: var(--secondary);
	}
</style>

<BaseLayout pageTitle={pageTitle}>
	<section class="hero">
			<h2 class="uppercase">Dain's Place</h2>
			<address>
				754 Ninth St<br />
				Durham, NC<br />
				919-416-8800
			</address>
	</section>
</BaseLayout>
